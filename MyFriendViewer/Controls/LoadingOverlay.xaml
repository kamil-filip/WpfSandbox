<UserControl x:Class="MyFriendViewer.Controls.LoadingOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyFriendViewer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#AAFFFFFF">
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <TextBlock Text="Loading data" Margin="5" FontSize="20" Foreground="Black"/>
            <ProgressBar Height="10" Background="Black" IsIndeterminate="True" Margin="5" 
                         BorderThickness="0" Foreground="Red"></ProgressBar>
        </StackPanel>
    </Grid>
</UserControl>
